mixin reviews(product_name, text, client_foto, about_client)
	li.client-reviews__item
		.cl__item-wrap
			.cl__item-title Товар:
				span.cl__product-name #{product_name}
			.cl__product-text #{text}
			.triangle
		.cl__clients-data
			.cl__clients-foto(style='background-image: url(img/#{client_foto})')
			.cl__clients-name #{about_client}




