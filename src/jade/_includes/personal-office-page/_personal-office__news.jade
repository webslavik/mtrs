mixin news-item(image, title, date, text)
	li.news__item
		.news__gradient-wrap
			.news__pic
				img(src="img/#{image}", alt="картинка")
			.news__item-content-wrap
				h3.news__item-title Новая серия матрасов «Твин» на двойных пружинах
				.news__item-date 25.09.2015
				p.news__item-text Технология двойных пружин используется уже продолжительное время, но именно сейчас она становится наиболее актуальной.

			.news__item-arrow-wrap
				a(href="#").news__item-arrow
					include ../_0-icon-svg/arrow-right.svg
					include ../_0-icon-svg/arrow-right.svg


// NEWS 

section.news-section

	.container

		.title-section
			h2.title-section__header.news__title-header Полезные статьи и новости

			.news__title-link
				a(href="#").news__link Все новости
					include ../_0-icon-svg/arrow-right.svg
					include ../_0-icon-svg/arrow-right.svg
		
		// news items
		.news-section__news
			ul.news

				+news-item('news-img.png', 'Новая серия матрасов «Твин» на двойных пружинах', '25.09.2015', 'Технология двойных пружин используется уже продолжительное время, но именно сейчас она становится наиболее актуальной.')

				+news-item('news-img.png', 'Новая серия матрасов «Твин» на двойных пружинах', '25.09.2015', 'Технология двойных пружин используется уже продолжительное время, но именно сейчас она становится наиболее актуальной.')

